void LoginAccounts(string User, string Pass, int TypeOfAccount) {
    bool UserExist = true;
    if (TypeOfAccount == 1)
        UserExist = readPacientes(User, Pass);
    if (TypeOfAccount == 2)
        UserExist = readCuidadores(User, Pass);
    if (TypeOfAccount == 3)
        UserExist = readMedicos(User, Pass);
    if (UserExist == 1) {
        switch (TypeOfAccount) {

        case 1:
            PacientesMenu();
        case 2:
            CuidadoresMenu();
        case 3:
            MedicosMenu();
        default:
            break;
        }
    }
}
